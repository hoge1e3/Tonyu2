\getMasterVolume() {
    return $t2MediaLib.getMasterVolume() * 128;
}

\setMasterVolume(vol) {
    if (typeof vol === "number") {
        vol /= 128;
        if (vol < 0.0) vol = 0.0;
    } else {
        return $t2MediaLib.setMasterVolume($t2MediaLib.getMasterVolume());
    }
