extends null;

\addThread(t) {// t:TonyuThread
    threads=threads||[];
    threads.push(t);
}
\addThreadGroup(tg) { // tg:BaseActor, mainly
    threadGroups=threadGroups||[];
    threadGroups.push(tg);
}
\killThreadGroup() {
    if (threads) {
        for (var thread in threads) {
            thread.kill();
        }
    }
    if (threadGroups) {
        for (var threadGroup in threadGroups) {
            threadGroup.killThreadGroup();
        }
    }
}