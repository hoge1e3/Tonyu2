
while(true) {
    x+=vx;
    y+=vy;
    rotation++;
    if (t=crashTo(Tama)) {
        vx+=(x-t.x)/40;
        vy+=(y-t.y)/40;
    }
    vy+=0.1;
    c=clamped(x,0,$screenWidth); if (c) vx=abs(vx)*sgn(c)*0.8;
    c=clamped(y,0,$screenHeight); if (c) vy=abs(vy)*sgn(c)*0.8;
    update();
}

\clamped(x,min,max) {
    return x<min ? min-x : x>max ? max-x : 0;
}
\sgn(s) {
    return s<0 ? -1 : s>0 ? 1:0; 
}