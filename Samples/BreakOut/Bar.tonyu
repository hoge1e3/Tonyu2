extends BodyActor;

while (true) {
    if (getkey("left")) {
        vx=-3;
    } else if (getkey("right")) {
        vx=3;
    } else {
        vx=0;
    }
    //vx*=0.95;
    if (getkey("up")) {
        vy=-3;
    } else if (getkey("down")) {
        vy=3;
    } else {
        vy=0;
    }
    rotation=vrotation=0;
    update();
}
