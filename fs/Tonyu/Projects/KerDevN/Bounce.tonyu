x=rnd($Screen.width);
y=rnd($Screen.height);
vx=spd();
vy=spd();
scaleX=3;
scaleY=2;
while (true) {
    x+=vx;
    y+=vy;
    scaleX=(x%20)/10-1;
    if (x<0) {
        x=0;
        vx=spd();
    }
    if (y<0) {
        y=0;
        vy=spd();
    }
    if (x>$screenWidth) {
        x=$screenWidth;
        vx=-spd();
    }
    if (y>$screenHeight) {
        y=$screenHeight;
        vy=-spd();
    }
    update();
}
\spd() {
    return rnd()*10;
}