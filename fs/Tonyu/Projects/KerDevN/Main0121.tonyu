val=10.5;
t1=new Actor{x:100,y:200,text:"trunc:",size:30,align:"left"};
t2=new Actor{x:250,y:200,text:"floor:",size:30,align:"left"};
t3=new Actor{x:175,y:100,text:"val:",size:30,align:"left"};
while(true){
    val-=0.1;
    t3.text="val:"+val;
    t1.text="trunc:"+trunc(val);
    t2.text="floor:"+floor(val);
    if(getkey("up")==1) val+=0.5;
    if(getkey("down")==1) val-=0.5;
    print(rnd(100));
    update();
}