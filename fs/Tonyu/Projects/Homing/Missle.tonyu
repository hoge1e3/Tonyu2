trace=[];
rotation=0;
while(true) {
    d=atan2($Player.y-y, $Player.x-x);
    a=angleDiff(rotation,d);
    if (a<0) rotation+=5; else rotation-=5;
    x+=cos(rotation)*5;
    y+=sin(rotation)*5;
    trace.push{x,y};
    if (trace.length>10) trace.shift();
    //drawLine(0,0,100,100,"red");
    for (t in trace) {
        drawLine(px,py,t.x,t.y,"white");
        //print(px+","+py+","+t.x+","+t.y);
        px=t.x;py=t.y;
    }
    update();
}