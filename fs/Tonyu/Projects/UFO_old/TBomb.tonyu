extends SpriteChar;

while (1) {
    t=0;
    // 地上で待機中。自機が触れると発射される
    while(t==0) {
        if (crashTo($Jiki,0,0)) t=1;
        update();
    }
    $mplayer.play($se_launch);
    
    tok=100;
    // 発射。yが-150になるまで
    while(y>-150) {
        y=y-10;
        // 発射中は左右キーで移動可能
        if (getkey(37)) if (x>10) x=x-2;
        if (getkey(39)) if (x<500) x=x+2;
        update();
        
    }
    // 発射後、再び地上にもどる。
    x=rnd()*300+100;
    y=360;
    
}