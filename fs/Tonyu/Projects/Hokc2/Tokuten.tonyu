extends DxChar;

// 得点表示
function setValue(v) {
    // 値を設定する。(*a)での待機状態を解除し、アニメーションを開始する
    value=v;notify();
}
value=p;

while (1) {
    wait();  // ここで待機 (*a)
    // 点が変化するアニメーション
    // 小さくなる
    while (scaleY>0.1) {
        scaleY=scaleY*0.8;
        update();
    }
    // 値を変え、大きくなる
    p=value;
    while (scaleY<1) {
        scaleY=scaleY*1.5;
        update();
    }
    scaleY=1;
    
}
