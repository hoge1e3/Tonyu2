extends SecretChar;

// バックに流れる星(?)
function onDraw() {
  drawLine(x,y,x+vx*spd*3,y+vy*spd*3,$clWhite);         
} 
 
spd=1;
x=-100;         
while(1) {
  x+=vx*spd;y+=vy*spd;
  spd=spd*1.01; 
  if (x<0 || x>$screenWidth || y<0 || y>$screenHeight) {
    r=rnd(360);
    vx=sin(r)*1; 
    vy=cos(r)*1;
    x=$screenWidth/2+vx*10;
    y=$screenHeight/2+vy*10;
    spd=0.3+rnd(5); 
  }   
  update();        
} 
               